<%=form_with model: book, local:true do |f|%>
  <div class="row">
  <div class= "mt-3">
    <%= f.label :Title %>
    <%= f.text_field :title, class: "col-xs-12" %>
  </div>

  <div class="form-group row">
  	<%= f.label :Opinion %>
    <%= f.text_area :body, class: "col-xs-12" %>
  </div>

  <div class="actions row">
    <%= f.submit class: "btn btn-success col-xs-12" %>
  </div>
  </div>
<% end %>
