<%=form_with model: book, local:true do |f|%>

  <div class="row">
  <div class= "mt-3">
    <%= f.label :Title %>
    <%= f.text_field :title, class: "form-group" %>
  </div>

  <div class="form-group row">
  	<%= f.label :Opinion %>
    <%= f.text_area :body, class: "form-group" %>
  </div>

  <div class="form-group">
    <%= f.submit class: "btn btn-success" %>
  </div>
  </div>
<% end %>
