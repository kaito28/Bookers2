   <div class='container px-5 px-sm-0'>
<div class="row">
 <div class= "col-md-3">
   <h2>User info</h2>

   <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg" ,format: 'no_image.jpg' %>
   <h5>name</h5>
   <%= @user.name %>
   <h5>introduction</h5>
   <%= @user.introduction %>
   <p> <%= link_to"",edit_user_path(@user.id), class: "btn btn-outline-secondary btn-block fas fa-user-cog edit_user"%> </p>

   <div class="row">
   <%= form_with model:@book, local:true do |f| %>

    <h2 class="mt-3">New book</h2>

    <h4>Title</h4>
    <%= f.text_field :title,class: "form-group" %>

    <h4>Opinion</h4>
     <%= f.text_field :body,class: "form-group" %>
    <nav>
    <%= f.submit 'Create Book',class: "btn btn-success" %>
    </nav>
    <% end %>

 </div>
  </div>
    <div class= "col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table">
    <thead>
      <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
      </tr>
      </thead>

	   <tbody>
      <% @books.each do |book| %>
      <tr>
      <td><%= link_to user_path(book.user_id) do %>
      <%= attachment_image_tag book.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg",format: 'no_image.jpg' %></td>
      <% end %>

      <td><%=link_to book.title, book_path(book.id)%></td>
      <td><%=link_to book.body %></td>
      </tr>
      <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

