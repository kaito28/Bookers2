


<div class="container">
  <div class="row">
 <div class="col-md-3">
      <%= render 'users/user', user: @user ,class:"table" %>

      <h2 class="mt-3">New book</h2>
      <%=form_with model: @newbook, local:true do |f|%>
  <div class="form-group">
    <%= f.label :Title %>
    <%= f.text_field :title, class: "col-xs-12" %>
  </div>

  <div class="form-group">
  	<%= f.label :Opinion %>
    <%= f.text_area :body, class: "col-xs-12" %>
  </div>

  <div class="form-group">
    <%= f.submit  class: "btn btn-success" %>
  </div>
<% end %>

</div>
    <div class="col-md-8 offset-md-1">
      <h1>Book detail</h1>
      <table class="table">
        <tr>
          <td>
          <%= link_to  user_path(@user) do %>
          <%= attachment_image_tag @user, :profile_image, :fill, 30, 30, fallback: "no_image.jpg"%>
           <%= @user.name %>
          <% end %>
          </td>


          <td><%= link_to @book.title, book_path %></td>
          <td><%= @book.body %></td>
          <% if @book.user_id == current_user.id %>
            <td><%= link_to "Edit", edit_book_path(@book), class:"btn btn-success"%></td>
            <td><%= link_to "Destroy", book_path(@book), method: :delete, data: {confirm: "本当に消しますか？"}, class:"btn btn-danger" %></td>
          <% end %>
        </tr>
      </table>
    </div>
  </div>
</div>