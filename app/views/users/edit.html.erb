<%if flash[:notice]%>
<p id = "notice">
    <%=flash[:notice]%>
</p>
<%end%>

<div class="container">
<div class="row">
<div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
<h2>User Info</h2>
<%= form_with model:@user, local:true do |f| %>
 <%= render 'books/error', model: @user %>
  <div class="user-name">Name</div>
    <%= f.text_field :name, class: "form-control name"%>
  <div class="user-edit-image">Image</div>
    <%= f.attachment_field :profile_image, class: "form-control-file" %>
  <div class="form-body">Introduction</div>
    <%= f.text_area :introduction, class: "form-control introduction" %><br>
  <div class="upload">
    <%= f.submit " Update User", class: "btn btn-secondary" %>
  </div>
  </div>
  </div>
  </div>
<% end %>